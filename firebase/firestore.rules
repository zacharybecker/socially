rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isOrgOwner(orgId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;
    }
    
    function isOrgMember(orgId) {
      let org = get(/databases/$(database)/documents/organizations/$(orgId)).data;
      return isAuthenticated() && (
        org.ownerId == request.auth.uid ||
        request.auth.uid in org.memberIds
      );
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Users cannot delete their own account via client
    }

    // Organizations collection
    match /organizations/{orgId} {
      allow read: if isOrgMember(orgId);
      allow create: if isAuthenticated();
      allow update: if isOrgOwner(orgId);
      allow delete: if isOrgOwner(orgId);

      // Social accounts subcollection
      match /socialAccounts/{accountId} {
        allow read: if isOrgMember(orgId);
        // Write operations should go through the backend API
        allow write: if false;
      }

      // Posts subcollection
      match /posts/{postId} {
        allow read: if isOrgMember(orgId);
        allow create: if isOrgMember(orgId);
        allow update: if isOrgMember(orgId);
        allow delete: if isOrgMember(orgId);
      }
    }

    // Scheduled jobs - only backend should access
    match /scheduledJobs/{jobId} {
      allow read, write: if false;
    }
  }
}
