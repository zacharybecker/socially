# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Cookie Secret
COOKIE_SECRET=your-super-secret-cookie-key-here

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Service Account (one of these is required)
# Option 1: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Option 2: Service account JSON as string (for deployment)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# OAuth State Secret (falls back to TIKTOK_CLIENT_SECRET if not set)
OAUTH_STATE_SECRET=your-oauth-state-secret

# TikTok API Configuration
# Get from https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/tiktok

# Instagram API Configuration
# Get from https://developers.facebook.com/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/instagram

# Facebook API Configuration
# Get from https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/facebook

# Twitter/X API Configuration
# Get from https://developer.x.com/
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/twitter

# LinkedIn API Configuration
# Get from https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/linkedin

# YouTube API Configuration
# Get from https://console.cloud.google.com/
