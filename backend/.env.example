THREADS_REDIRECT_URI=http://localhost:3001/organizations/{orgId}/accounts/callback/threads

# OpenAI API Configuration
# Get from https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe Configuration
# Get from https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_CREATOR_MONTHLY=price_creator_monthly_id
STRIPE_PRICE_CREATOR_YEARLY=price_creator_yearly_id
STRIPE_PRICE_BUSINESS_MONTHLY=price_business_monthly_id
